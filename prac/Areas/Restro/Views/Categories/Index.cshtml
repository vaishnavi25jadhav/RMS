@model IEnumerable<ResTask.Model.Category>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:white">Index</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:black">
    <nav class="navbar navbar-expand navbar-dark bg-success sticky-top">
        <a class="navbar-brand" href="#">
            <img src="~/Images/zaika.jpg" alt="Logo" style="width:50px;">
        </a>
        <div class="container-fluid">
            <a class="navbar-brand" href="./">ZAYKA KING</a>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <!-- NAVBAR LINKS -->
                <li class="nav-item">
                    <a class="nav-link active" href="https://localhost:44397/#">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="#">Contact</a>
                </li>



                <!-- DROPDOWN OPTIONS -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Manage</a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item"
                           asp-area="Restro" asp-controller="Categories" asp-action="Index">Categories</a>
                        <a class="dropdown-item"
                           asp-area="Restro" asp-controller="Menus" asp-action="Index">Menus</a>
                        <a class="dropdown-item"
                           asp-area="Restro" asp-controller="Orders" asp-action="Index">Orders</a>
                    </div>
                </li>
            </ul>
            <!-- SEARCH BOX -->
            <form class="d-flex">
                <input class="form-control me-2"
                       type="search"
                       placeholder="Search site" />
                <button class="btn btn-primary"
                        type="submit">
                    Search
                </button>
            </form>
        </div>
    </nav>
</body>
</html>

<p>
    <a class="btn btn-primary btn-sm p-0" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr style="color:white">
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="color:white">
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a class="btn btn-primary p-1" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a class="btn btn-danger p-1" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a class="btn btn-warning p-1" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
